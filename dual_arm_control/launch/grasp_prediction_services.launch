<launch>
    <arg name="left_arm_port"  default="5555"/>
    <arg name="right_arm_port" default="5556"/>

    <arg name="left_gripper_type"  default="finger"/>
    <arg name="right_gripper_type" default="suction"/>

    <group ns="L_panda">
        <node name="grasp_client" pkg="dual_arm_control" type="combined_client_srv.py" output="screen" respawn="true">
            <param name="arm_id"       value="L_panda"/>
            <param name="port"         value="$(arg left_arm_port)"/>
            <param name="gripper_type" value="$(arg left_gripper_type)"/>
        </node>
    </group>

    <group ns="R_panda">
        <node name="grasp_client" pkg="dual_arm_control" type="combined_client_srv.py" output="screen" respawn="true">
            <param name="arm_id"       value="R_panda"/>
            <param name="port"         value="$(arg right_arm_port)"/>
            <param name="gripper_type" value="$(arg right_gripper_type)"/>
        </node>
    </group>
</launch>