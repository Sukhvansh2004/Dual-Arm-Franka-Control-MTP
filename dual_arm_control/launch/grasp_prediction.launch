<launch>
    <arg name="arm_id_0" default="L_panda" />
    <arg name="arm_id_1" default="R_panda" />
    <arg name="use_suction_gripper_0" default="false" />
    <arg name="use_suction_gripper_1" default="true" />
    
    <arg name="suction_config" default="$(find dual_arm_control)/config/suction_cfg.yaml" />
    <arg name="finger_config" default="$(find dual_arm_control)/config/panda_cfg.yaml" />

    <arg name="prediction_hz" default="0.5" />
    <arg name="collision_thresh" default="0.02" />
    <arg name="grasp_thresh" default="0.8" />

    <node name="grasp_prediction_node"
          pkg="dual_arm_control" type="grasp_prediction_node.py" output="screen">
        
        <param name="arm_id_0" value="$(arg arm_id_0)" />
        <param name="arm_id_1" value="$(arg arm_id_1)" />
        <param name="use_suction_gripper_0" value="$(arg use_suction_gripper_0)" />
        <param name="use_suction_gripper_1" value="$(arg use_suction_gripper_1)" />

        <param name="suction_gripper_config" value="$(arg suction_config)" />
        <param name="finger_gripper_config" value="$(arg finger_config)" />
        
        <param name="prediction_hz" value="$(arg prediction_hz)" />
        <param name="collision_threshold" value="$(arg collision_thresh)" />
        <param name="grasp_threshold" value="$(arg grasp_thresh)" />
        
        <param name="max_scene_points" value="8192" />
        <param name="num_grasps" value="200" />
        <param name="depth_ignore_threshold" value="0.02" />
    </node>
</launch>